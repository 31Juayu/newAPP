<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forest"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/Login_button_main"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="255dp"
        android:layout_weight="1"
        android:background="@drawable/background_button_login_and_sign_up"
        android:padding="15dp"
        android:fontFamily="@font/atomicage"
        android:text="log in"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/SignUp_button_main"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="350dp"
        android:layout_weight="1"
        android:background="@drawable/background_button_login_and_sign_up"
        android:padding="10dp"
        android:fontFamily="@font/atomicage"
        android:text="Create a New Account"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="12dp"
        android:text="Or if already have an account"
        android:fontFamily="@font/atomicage"
        app:layout_constraintBottom_toTopOf="@+id/Login_button_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUp_button_main" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="140dp"
        android:padding="15dp"
        android:text="The Best Online Course Platform"
        android:textColor="#BFE4C1"
        android:fontFamily="@font/atomicage"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/SignUp_button_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/privacyCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="120dp"
        android:padding="15dp"
        android:text="I agree to the"
        android:fontFamily="@font/atomicage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login_button_main"
        app:layout_constraintVertical_bias="0.357" />

    <TextView
        android:id="@+id/privacyLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="120dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="15dp"
        android:text="Privacy Policy"
        android:fontFamily="@font/atomicage"
        android:textColor="#0000FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/privacyCheckbox"
        app:layout_constraintTop_toBottomOf="@+id/Login_button_main"
        app:layout_constraintVertical_bias="0.384" />
</androidx.constraintlayout.widget.ConstraintLayout>