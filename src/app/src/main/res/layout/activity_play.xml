<!-- LinearLayout as the root container for a video playback interface, organized vertically and centered horizontally -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".activity.PlayActivity">

    <!-- TextView to display the current video's name, centered at the top of the screen with bold style and blue color -->
    <TextView
        android:id="@+id/current_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Name"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="#00008F"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <!-- VideoView for playing the video, occupying a fixed height and full available width with a margin on top -->
    <VideoView
        android:id="@+id/current_video_play"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="16dp"/>

    <!-- Switch for marking the video as a favorite, styled with custom text color and padding, aligned to match the parent's width -->
    <Switch
        android:id="@+id/switch_favorite"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Favorite"
        android:switchMinWidth="40dp"
        android:textSize="24sp"
        android:thumbTextPadding="12dp"
        android:switchPadding="16dp"
        android:textColor="#C36A6A"
        android:layout_marginTop="16dp"/>

    <!-- Button to return from the current activity, styled with a custom background and centered in layout -->
    <Button
        android:id="@+id/backButton11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_button_login_and_sign_up"
        android:fontFamily="@font/atomicage"
        android:text="Return"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</LinearLayout>
