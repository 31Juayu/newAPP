<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.searchActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="Search"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


    <!-- See Info Button -->

    <Button
        android:id="@+id/go_back_searches"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_login_and_sign_up"
        android:fontFamily="@font/atomicage"
        android:text="Return"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/seeInfo"
        app:layout_constraintEnd_toStartOf="@id/seeInfo"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="1.0" />

    <!-- Country Button -->

    <Button
        android:id="@+id/seeInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_login_and_sign_up"
        android:fontFamily="@font/atomicage"
        android:text="See info"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/go_back"
        app:layout_constraintEnd_toStartOf="@id/Country"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/go_back"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_login_and_sign_up"
        android:fontFamily="@font/atomicage"
        android:text="Country"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/seeInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/seeInfo"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="560dp"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="135dp">


        <EditText
            android:id="@+id/informationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="your input"
            android:inputType="text" />

        <Button
            android:id="@+id/startSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Search" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>