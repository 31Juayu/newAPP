<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/forest"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-127dp">

        <TextView
            android:id="@+id/TitleText"
            android:layout_width="363dp"
            android:layout_height="78dp"
            android:layout_margin="25dp"
            android:fontFamily="@font/atomicage"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="MENU"
            android:textColor="#BFE4C1"
            android:textSize="48sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#00DC8E37"
            android:orientation="vertical">

            <EditText
                android:id="@+id/UserNameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/underline1"
                android:fontFamily="@font/atomicage"
                android:hint="Search"
                android:padding="15dp"
                android:singleLine="true"
                android:textColorHint="#C9DF9F"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/PassWordForget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/spacegrotesk"
                android:gravity="center_horizontal"
                android:text="Need Help? Click Here."
                android:textColor="#E3FAD9"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#6DDBDFD5"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button1"
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="70dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:padding="15dp"
                android:text="GPS"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="70dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:padding="15dp"
                android:text="Video"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <!-- Button 3 -->

            <Button
                android:id="@+id/button3"
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="70dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:padding="15dp"
                android:text="Assignment"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#59EDFADD"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="30dp"
                android:layout_height="81dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="70dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:padding="15dp"
                android:text="Profile"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="30dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="70dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:padding="15dp"
                android:text="Favorite List"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="30dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="70dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:padding="15dp"
                android:text="Notice Board"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#59DDE6CA"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="70dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:padding="15dp"
                android:text="Button 7"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="70dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:padding="15dp"
                android:text="Button 8"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <!-- Button 3 -->

            <Button
                android:id="@+id/button9"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="70dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:padding="15dp"
                android:text="Button 9"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is Education good?" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>